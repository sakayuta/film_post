<header class="fixed-top">
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container my-2">
      <a class="navbar-brand" href="/"><i class="fas fa-film"></i><span class="logo">FilmPost</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
        <% if admin_signed_in? %>
          <% if request.fullpath.include? "/admin" %>
           <li class="nav-item">
            <%= link_to "会員一覧", admin_users_path, class: 'nav-link text-light btn btn-outline-light ml-3' %>
           </li>
           <li class="nav-item">
            <%= link_to "投稿一覧", films_path, class: 'nav-link text-light btn btn-outline-light ml-3' %>
           </li>
           <li class="nav-item">
            <%= link_to "ジャンル", admin_genres_path, class: 'nav-link text-light btn btn-outline-light ml-3' %>
           </li>
           <li class="nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-light btn btn-outline-light ml-3' %>
           </li>
          <% else %>
           <li class="nav-item">
            <%= link_to "About", about_path, class: 'nav-link text-light btn btn-outline-light' %>
           </li>
           <li class="nav-item">
             <%= link_to "ログイン", new_admin_session_path, class: 'nav-link text-light btn btn-outline-light ml-3' %>
           </li>
          <% end %>
        <% elsif  user_signed_in? %>
          <nav class="nav navbar-nav text-white mt-1 mr-5">
          　<span class="text-white">ようこそ、<%= current_user.name %>さん！</span>
          </nav>

          <li class="nav-item">
           <%= link_to user_path(current_user), class: 'nav-link text-light btn btn-outline-light' do %>
            <i class="fas fa-house-user"></i>マイページ
           <% end %>
          </li>
          <li class="nav-item">
           <%= link_to films_path, class: 'nav-link text-light btn btn-outline-light ml-3' do %>
            <i class="fas fa-list"></i>投稿一覧
           <% end %>
          </li>
          <li class="nav-item">
           <%= link_to users_path, class: 'nav-link text-light btn btn-outline-light ml-3' do %>
            <i class="fas fa-users"></i>会員一覧
           <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-light btn btn-outline-light ml-3' do %>
             <i class="fas fa-sign-out-alt"></i>ログアウト
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
           <%= link_to about_path, class: 'nav-link text-light btn btn-outline-light' do %>
            <i class="fas fa-smile-wink"></i>About
           <% end %>
          </li>
          <li class="nav-item">
           <%= link_to films_path, class: 'nav-link text-light btn btn-outline-light ml-3' do %>
            <i class="fas fa-list"></i>投稿一覧
           <% end %>
          </li>
          <li class="nav-item">
           <%= link_to new_user_registration_path, class: 'nav-link text-light btn btn-outline-light ml-3' do %>
            <i class="fas fa-user-plus"></i>新規登録
           <% end %>
          </li>
          <li class="nav-item">
           <%= link_to new_user_session_path, class: 'nav-link text-light btn btn-outline-light ml-3' do %>
            <i class="fas fa-sign-in-alt"></i>ログイン
           <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>