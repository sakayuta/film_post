<div class='container'>
   <div class='row'>
      <div class="col-sm-12 col-md-8 col-lg-9 px-5 px-sm-0 mx-auto">
        <h2 class="text-center">会員一覧</h2>
        <table class='table table-hover'>
          <thead>
             <tr>
                <th>会員ID</th>
                <th></th>
                <th>名前</th>
                <th>メールアドレス</th>
                <th>ステータス</th>
             </tr>
          </thead>
          <tbody>
             <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= image_tag user.get_profile_image(60,60) %></td>
                <td>
                  <%= link_to admin_user_path(user.id) do %>
                   <%= user.name %>
                  <% end %>
                </td>
                <td><%= user.email %></td>
                <td>
                  <%if user.is_valid? == true %>
                   <span class="text-success">有効</span>
                  <% else %>
                   <span class="text-danger">退会済み</span>
                  <% end %>
                </td>
              </tr>
             <% end %>
          </tbody>
        </table>
        <%= paginate @users, theme: 'twitter-bootstrap-4',pagination_class: "pagination-sm",nav_class: "d-inline-b" %>
      </div>
   </div>
</div>
