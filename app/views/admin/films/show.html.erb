<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h3>
        管理者用<br>
        投稿作品詳細<br>
        管理画面
      </h3>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h3>投稿作品詳細</h3>
  		<table class='table'>
  		  <tr>
          <td>
             <%= image_tag @user.get_profile_image(80,80) %><br>
             <%= @film.user.name %>
          </td>
          <td><%= @film.title %></td>
          <td><%= @film.body %></td>
          <td><%= @film.favorites.count %>いいね</td>
          <td id="comments_count_<%= @film.id %>">
            <%= render 'user/film_comments/count', film: @film %>
          </td>
          <td><%= @film.genre.name %></td>
          <% if admin_signed_in? %>
            <td><%= link_to '管理者用削除', admin_film_path(@film.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-outline-danger admin_destroy_film_#{@film.id}"%></td>
          <% end %>
        </tr>
      </table>

      <div id="comments_area">
        <%= render 'user/film_comments/comment', film: @film, film_comment: @film_comment %>
      </div>
    </div>
  </div>
</div>
