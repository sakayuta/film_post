<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class="text-center">管理者用投稿一覧</h1>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>投稿者</th>
            <th>タイトル</th>
            <th>おすすめポイント</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
         <% @films.each do |film| %>
          <tr>
            <td><%= film.user.name %></td>
            <td><%= link_to film.title, admin_film_path(film.id), class: "admin_film_#{film.id}" %></td>
            <td><%= film.body %></td>
            <td><%= film.favorites.count %>いいね</td>
            <td>コメント数: <%= film.film_comments.count %></td>
          </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>