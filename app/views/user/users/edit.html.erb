<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class="text-center">会員情報編集</h2>
      <%= form_with model: @user do |f| %>
       <table class ="table table-borderless">
         <tr>
           <th><%= f.label :"名前" %></th>
           <td><%= f.text_field :name, class: "form-control" %></td>
         </tr>

         <tr>
           <th><%= f.label :"フリガナ" %></th>
           <td><%= f.text_field :name_kana, class: "form-control" %></td>
         </tr>

         <tr>
           <th><%= f.label :"メールアドレス" %></th>
           <td><%= f.email_field :email, class: "form-control" %></td>
         </tr>

         <tr>
           <th><%= f.label :"性別" %></th>
           <td><%= f.select :sex, User.sexes.keys.map {|k| [I18n.t("enums.user.sex.#{k}"), k]}, class: "form-control" %></td>
         </tr>

         <tr>
           <th><%= f.label :"年齢層" %></th>
           <td><%= f.select :age_group, User.age_groups.keys.map {|k| [I18n.t("enums.user.age_group.#{k}"), k]}, class: "form-control" %></td>
         </tr>

         <tr>
           <th><%= f.label :"プロフィール画像" %></th>
           <td><%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %></td>
         </tr>

         <tr>
           <td><%= f.submit "編集を保存", class: "btn btn-outline-success" %></td>
         </tr>

         <tr>
           <td><%= link_to "退会する", unsubscribe_path, class: "btn btn-danger", style: "width: 86%" %></td>
         </tr>
       </table>
      <% end %>
    </div>
  </div>
</div>