<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h3>
        <% if @user == current_user %>
         あなたの会員情報
        <% else %>
         <%= @user.name %>さんの<br>
         会員情報
        <% end %>
      </h3>
      <%= render 'info', user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h3>投稿一覧</h3>
      <p>
        <%= link_to '新しい順', films_path(latest: "true") %>
        |<%= link_to '古い順', films_path(old: "true") %>
        |<%= link_to '評価の高い順', films_path(star_count: "true") %>
      </p>
      <%= render 'user/films/index',films: @films %>
    </div>
  </div>
</div>