<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h3>
        <% if @user == current_user %>
         あなたの会員情報
        <% else %>
         <%= @user.name %>さんの<br>
         会員情報
        <% end %>
      </h3>
      <%= render 'user/users/info', user: @user %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h3>投稿作品詳細</h3>
  		<table class='table'>
  		  <tr>
          <td>
            <%= link_to(@film.user) do %>
             <%= image_tag @user.get_profile_image(80,80) %><br>
             <%= @film.user.name %>
            <% end %>
          </td>
          <td><%= @film.title %></td>
          <td><%= @film.body %></td>
          <% if @user == current_user %>
           <td><%= @film.favorites.count %>いいね</td>
          <% else %>
           <td id="favorite_buttons_<%= @film.id %>">
            <%= render 'user/favorites/favorite', film: @film %>
           </td>
          <% end %>
          <td id="comments_count_<%= @film.id %>">
            <%= render 'user/film_comments/count', film: @film %>
          </td>
          <td><%= @film.genre.name %></td>
          <% if @user == current_user %>
            <td><%= link_to '編集', edit_film_path(@film.id), class: "btn btn-sm btn-outline-success edit_film_#{@film.id}" %></td>
            <td><%= link_to '削除', @film, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-outline-danger destroy_film_#{@film.id}"%></td>
          <% end %>
        </tr>
      </table>

      <div id="comments_area">
        <%= render 'user/film_comments/comment', film: @film %>
      </div>
      <%= form_with model: [@film, @film_comment], local: false do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, rows:'5', class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "コメントする" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
