<div class='container px-5 px-sm-0'>
  <%#= render 'layouts/errors', obj: @film %>
  <div class='row'>
    <div class='col-md-3'>
      <% if current_user %>
        <h3>あなたの会員情報</h3>
        <%= render 'user/users/info', user: current_user %>
      <% end %>
      <%= render 'genres', genres: @genres %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h3>投稿一覧</h3><h6>(<%= @films.count %>件)</h6>
      <%= render 'index', films: @films %>
    </div>
  </div>
</div>